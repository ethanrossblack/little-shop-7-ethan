<div id="admin-dashboard-sub-header">
  <h3> Admin Dashboard </h3>
</div>

<div class="admin_nav">
  <%= render partial: "admin_header" %>
<div>

<div class="column">
  <section class="top_customers">
    <h3>Top 5 Customers</h3>
      <ol>
        <% @top_5_customers.each do |customer| %>
          <li><%="#{customer.first_name} #{customer.last_name} has made #{customer.successful_transactions} successful transactions"%></li><br>
        <% end %>
      </ol>
  </section>
  </div>

<div class="incomplete-invoices">
  <h2>Incomplete Invoices</h2>
      <% @incomplete_invoices.each do |invoice| %><br>
          <div id="invoice-<%= invoice.id %>">
              <%= link_to "Invoice ##{invoice.id}", admin_invoice_path(invoice.id) %> - <%= invoice.formatted_date %>
          </div>
      <% end %>
</div>


